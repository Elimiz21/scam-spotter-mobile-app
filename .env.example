# ScamShield Environment Variables
# Copy this file to .env.local for development

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# PayPal Configuration
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Application Configuration
VITE_APP_ENV=development
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:5173

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_LOGGING=true

# Security
VITE_RATE_LIMIT_ENABLED=true
VITE_MAX_REQUESTS_PER_MINUTE=60

# Email Service (optional)
VITE_EMAIL_SERVICE_API_KEY=your_email_service_api_key

# AI Service Configuration (optional)
VITE_AI_SERVICE_URL=your_ai_service_url
VITE_AI_SERVICE_API_KEY=your_ai_service_api_key

# Monitoring (optional)
VITE_SENTRY_DSN=your_sentry_dsn
VITE_SENTRY_ENVIRONMENT=development