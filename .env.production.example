# ScamShield Production Environment Variables
# Use this as a template for production deployments

# Supabase Configuration
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key

# PayPal Configuration
VITE_PAYPAL_CLIENT_ID=your_production_paypal_client_id

# Application Configuration
VITE_APP_ENV=production
VITE_APP_URL=https://www.scamshiel.com
VITE_API_URL=https://api.scamshiel.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_LOGGING=false

# Security
VITE_RATE_LIMIT_ENABLED=true
VITE_MAX_REQUESTS_PER_MINUTE=30

# Email Service
VITE_EMAIL_SERVICE_API_KEY=your_production_email_api_key

# AI Service Configuration
VITE_AI_SERVICE_URL=https://ai.scamshiel.com
VITE_AI_SERVICE_API_KEY=your_production_ai_api_key

# Monitoring
VITE_SENTRY_DSN=your_production_sentry_dsn
VITE_SENTRY_ENVIRONMENT=production

# CDN Configuration
VITE_CDN_URL=https://cdn.scamshiel.com

# Security Headers
VITE_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.paypal.com; style-src 'self' 'unsafe-inline';"